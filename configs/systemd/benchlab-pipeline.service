[Unit]
Description=Pipeline Probes (GStreamer/SDK)
After=network-online.target

[Service]
User=benchlab
Group=benchlab
Environment=BENCHLAB_CONFIG=/etc/benchlab/config.toml
ExecStart=/usr/bin/python3 /opt/benchlab/apps/pipeline_probes/r5c_capture.py --daemon
Restart=always
RestartSec=2
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

[Install]
WantedBy=multi-user.target
